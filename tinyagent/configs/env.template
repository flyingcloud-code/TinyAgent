# TinyAgent Environment Variables Template
# Copy this file to .env in the project root and fill in your actual values

# LLM API Keys (choose the provider you want to use)
OPENAI_API_KEY=your-openai-api-key-here
OPENROUTER_API_KEY=your-openrouter-api-key-here
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here

# LLM Configuration
OPENAI_MODEL=gpt-4
OPENAI_BASE_URL=https://api.openai.com/v1
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet
LOCAL_LLM_URL=http://localhost:11434
LOCAL_MODEL=llama2

# TinyAgent Settings
TINYAGENT_ROOT=C:/work/github/TinyAgent
TINYAGENT_DB=./data/tinyagent.db
TINYAGENT_PROFILE=development

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=

# OpenRouter Specific (for analytics)
OPENROUTER_REFERER=https://github.com/your-org/tinyagent
OPENROUTER_TITLE=TinyAgent

# Azure Specific
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/

# Development Settings
TINYAGENT_DEBUG=false 